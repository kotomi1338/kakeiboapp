<%= bootstrap_form_with model: @cost, inline_errors: false, local: true do |f| %>
  <% if cost.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% cost.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <%= f.text_field :name %>
  <%= f.number_field :price %>
  <%= f.text_area :description %>
  <%= f.submit "送信" %>
<% end %>
